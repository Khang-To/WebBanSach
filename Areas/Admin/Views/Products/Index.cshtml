@model IEnumerable<WebBanSach.Models.Product>
@{
    ViewData["Title"] = "Danh mục sách";

    var search = ViewBag.Search as string ?? "";
    var authorId = ViewBag.AuthorId as int?;
    var productCategoryId = ViewBag.ProductCategoryId as int?;
    var publisherId = ViewBag.PublisherId as int?;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<div class="container mt-4">
    <!-- Tiêu đề + nút thêm -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-tags-fill"></i> @ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Thêm sách
        </a>
    </div>

    <!-- Form lọc -->
    <form asp-action="Index" method="get" class="row g-3 mb-4 p-3 bg-light shadow-sm rounded">
        <div class="col-md-3">
            <input type="text" name="search" class="form-control" placeholder="Tìm tên sách..." value="@search" />
        </div>

        <div class="col-md-2">
            <select name="authorId" class="form-select" asp-items="@(new SelectList(ViewBag.Authors, "ID", "Name", authorId))">
                <option value="">-- Tất cả tác giả --</option>
            </select>
        </div>

        <div class="col-md-2">
            <select name="productCategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.ProductCategories, "ID", "Name", productCategoryId))">
                <option value="">-- Tất cả thể loại --</option>
            </select>
        </div>

        <div class="col-md-2">
            <select name="publisherId" class="form-select" asp-items="@(new SelectList(ViewBag.Publishers, "ID", "Name", publisherId))">
                <option value="">-- Tất cả NXB --</option>
            </select>
        </div>

        <div class="col-md-1 d-grid">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Lọc
            </button>
        </div>

        <div class="col-md-2 d-grid">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-clockwise"></i> Hiện tất cả
            </a>
        </div>
    </form>

    <!-- Bảng sách -->
    <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>Hình ảnh</th>
                        <th>Tên sách</th>
                        <th>Thể loại</th>
                        <th>Tác giả</th>
                        <th>Nhà xuất bản</th>
                        <th>Tồn kho</th>
                        <th>Giá bán</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <img src="/images/products/@item.ImageUrl"
                                         alt="@item.Name"
                                         width="80" height="80"
                                         style="object-fit: cover; border-radius: 8px;" />
                                </td>
                                <td class="fw-bold">@item.Name</td>
                                <td>@item.Category?.Name</td>
                                <td>@item.Author?.Name</td>
                                <td>@item.Publisher?.Name</td>
                                <td><span class="badge bg-info">@item.Stock</span></td>
                                <td>@item.FinalPrice.ToString("N0") ₫</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="bi bi-inbox display-1 text-secondary opacity-50 d-block mb-3"></i>
                                <h5 class="text-muted">
                                    @(string.IsNullOrEmpty(search) && authorId == null && productCategoryId == null && publisherId == null
                                                                    ? "Chưa có sách nào trong hệ thống."
                                                                    : "Không tìm thấy sách nào phù hợp với bộ lọc.")
                            </h5>
                            @if (!string.IsNullOrEmpty(search) || authorId != null || productCategoryId != null || publisherId != null)
                                {
                                    <a asp-action="Index" class="btn btn-link">← Xóa bộ lọc</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- PHÂN TRANG GIỮ LỌC 100% -->
    @if (totalPages > 1)
    {
        <nav aria-label="Phân trang" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Trang đầu -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="1"
                       asp-route-search="@search"
                       asp-route-authorId="@authorId"
                       asp-route-productCategoryId="@productCategoryId"
                       asp-route-publisherId="@publisherId">
                        <i class="bi bi-chevron-double-left"></i>
                    </a>
                </li>

                <!-- Trang trước -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage - 1)"
                       asp-route-search="@search"
                       asp-route-authorId="@authorId"
                       asp-route-productCategoryId="@productCategoryId"
                       asp-route-publisherId="@publisherId">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @{
                    int startPage = Math.Max(1, currentPage - 2);
                    int endPage = Math.Min(totalPages, currentPage + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-search="@search"
                           asp-route-authorId="@authorId"
                           asp-route-productCategoryId="@productCategoryId"
                           asp-route-publisherId="@publisherId">
                            @i
                        </a>
                    </li>
                }

                @if (endPage < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                <!-- Trang sau -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(currentPage + 1)"
                       asp-route-search="@search"
                       asp-route-authorId="@authorId"
                       asp-route-productCategoryId="@productCategoryId"
                       asp-route-publisherId="@publisherId">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>

                <!-- Trang cuối -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@totalPages"
                       asp-route-search="@search"
                       asp-route-authorId="@authorId"
                       asp-route-productCategoryId="@productCategoryId"
                       asp-route-publisherId="@publisherId">
                        <i class="bi bi-chevron-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>