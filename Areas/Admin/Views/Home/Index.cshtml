@{
    ViewData["Title"] = "Bảng điều khiển";
}

<div class="container-fluid p-4">
    <!-- Row 1: Cards tổng quan -->
    <div class="row g-3 mb-4">
        <div class="col-md-2 col-6">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body text-center py-4">
                    <h5 class="mb-1">Sách</h5>
                    <h3 class="mb-0">@ViewBag.TotalProducts</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body text-center py-4">
                    <h5 class="mb-1">Loại sách</h5>
                    <h3 class="mb-0">@ViewBag.TotalCategories</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body text-center py-4">
                    <h5 class="mb-1">Nhà xuất bản</h5>
                    <h3 class="mb-0">@ViewBag.TotalPublishers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card bg-danger text-white shadow-sm">
                <div class="card-body text-center py-4">
                    <h5 class="mb-1">Khách hàng</h5>
                    <h3 class="mb-0">@ViewBag.TotalCustomers</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body text-center py-4">
                    <h5 class="mb-1">Đơn hàng</h5>
                    <h3 class="mb-0">@ViewBag.TotalOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-6">
            <div class="card bg-dark text-white shadow-sm">
                <div class="card-body text-center py-4">
                    <h5 class="mb-1">Doanh thu</h5>
                    <h3 class="mb-0">
                        @(string.Format("{0:N0}", ViewBag.TotalRevenue ?? 0)) ₫
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Biểu đồ -->
    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <strong>Doanh thu theo tháng</strong>
                </div>
                <div class="card-body">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <strong>Thống kê trạng thái đơn hàng</strong>
                </div>
                <div class="card-body">
                    <canvas id="ordersChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Đơn hàng chờ xử lý -->
    @{
        var recentOrders = ViewBag.RecentOrders as IEnumerable<dynamic> ?? Enumerable.Empty<dynamic>();
    }
    <div class="card-header bg-warning text-dark fw-bold">
        <i class="bi bi-clock-history"></i>
        ĐƠN HÀNG ĐANG CHỜ XÁC NHẬN
        <span class="badge bg-danger ms-2">@recentOrders.Count()</span>
    </div>

    <div class="card-body p-0">
        @if (!recentOrders.Any())
        {
            <div class="text-center py-5 text-success">
                <i class="bi bi-check-circle-fill fs-1"></i>
                <p class="mt-3 fs-5">Không còn đơn hàng nào đang chờ xử lý.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <tbody>
                        @foreach (var order in recentOrders)
                        {
                            <tr>
                                <td>#@order.OrderId</td>
                                <td>@order.CustomerName</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-danger fw-bold">@order.TotalAmount.ToString("N0") ₫</td>
                                <td>
                                    <span class="badge bg-warning text-dark px-3 py-2">Chờ xử lý</span>
                                </td>
                                <td>
                                    <a asp-controller="Orders"
                                       asp-action="Details"
                                       asp-route-id="@order.OrderId"
                                       class="btn btn-sm btn-outline-primary">
                                        Xem
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ doanh thu
        new Chart(document.getElementById('revenueChart'), {
            type: 'line',
            data: {
                labels: @Html.Raw(ViewBag.MonthLabels ?? "[]"),
                datasets: [{
                    label: 'Doanh thu (VNĐ)',
                    data: @Html.Raw(ViewBag.MonthRevenue ?? "[]"),
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#0d6efd'
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: { mode: 'index', intersect: false }
                },
                scales: { y: { beginAtZero: true } }
            }
        });

        // Biểu đồ trạng thái đơn hàng
        new Chart(document.getElementById('ordersChart'), {
            type: 'doughnut',
            data: {
                labels: ['Chờ xử lý', 'Đã xác nhận', 'Đã thanh toán', 'Đã hủy'],
                datasets: [{
                    data: @Html.Raw(ViewBag.OrderStatusCounts ?? "[0,0,0,0]"),
                    backgroundColor: ['#ffc107', '#0d6efd', '#198754', '#dc3545'],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'bottom' } }
            }
        });
    </script>
}