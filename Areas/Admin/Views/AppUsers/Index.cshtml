@model IEnumerable<WebBanSach.Models.AppUser>

@{
    ViewData["Title"] = "Danh mục khách hàng";
    var search = ViewBag.Search as string ?? "";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    int maxPagesToShow = 5; // số trang hiển thị tối đa ở giữa
}

<div class="container mt-4">
    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="bi bi-tags-fill"></i> @ViewData["Title"]
        </h2>
    </div>

    <!-- Ô tìm kiếm -->
    <form asp-action="Index" method="get" class="input-group mb-3 shadow-sm">
        <input type="text" name="search" class="form-control" placeholder="Tìm kiếm theo tên khách hàng..." value="@search" />

        <button class="btn btn-outline-primary" type="submit">
            <i class="bi bi-search"></i> Tìm kiếm
        </button>

        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-clockwise"></i> Hiện tất cả
        </a>
    </form>


    <!-- Bảng danh mục -->
    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhoneNumber)
                        </th>
                        <th style="width: 25%">
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th style="width: 20%">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            @if (item.UserType == UserType.Customer)
                            {
                                <tr>
                                    <td class="fw-semibold">@item.UserName</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Address</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Khóa</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">

                                            <!-- Xem chi tiết -->
                                            <a asp-action="Details" asp-route-userId="@item.ID"
                                               class="btn btn-sm btn-outline-info" title="Xem chi tiết khách hàng">
                                                <i class="bi bi-person-vcard"></i>
                                            </a>

                                            <!-- Xem đơn hàng của khách -->
                                            <a asp-controller="Orders" asp-action="Index" asp-route-userId="@item.ID"
                                               class="btn btn-sm btn-outline-primary" title="Xem đơn hàng của khách">
                                                <i class="bi bi-bag-check"></i>
                                            </a>

                                            <!-- Bật / tắt trạng thái tài khoản -->
                                            <a asp-action="ToggleStatus"
                                               asp-route-id="@item.ID"
                                               class="btn btn-sm @(item.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                               title="@(item.IsActive ? "Khóa tài khoản" : "Mở khóa tài khoản")"
                                               onclick="return confirm('Bạn có chắc muốn @(item.IsActive ? "khóa" : "mở khóa") tài khoản @item.FullName không?');">
                                                <i class="@(item.IsActive ? "bi bi-person-lock" : "bi bi-person-check")"></i>
                                            </a>

                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                @if (string.IsNullOrEmpty(search))
                                {
                                    <text>Chưa có khách hàng nào.</text>
                                }
                                else
                                {
                                    <text>Không tìm thấy khách hàng nào.</text>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Phân trang -->
    @if (totalPages > 1)
    {
        <nav aria-label="Phân trang">
            <ul class="pagination justify-content-center mt-3">

                <!-- Trang đầu -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="1" asp-route-search="@search">
                        <i class="bi bi-chevron-double-left"></i>
                    </a>
                </li>

                <!-- Trang trước -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-search="@search">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @* Các trang giữa *@
                @{
                    int start = Math.Max(1, currentPage - 2);
                    int end = Math.Min(totalPages, start + maxPagesToShow - 1);
                    if (end - start < maxPagesToShow - 1)
                    {
                        start = Math.Max(1, end - maxPagesToShow + 1);
                    }
                }

                @if (start > 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@search">@i</a>
                    </li>
                }

                @if (end < totalPages)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }

                <!-- Trang sau -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-search="@search">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>

                <!-- Trang cuối -->
                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@totalPages" asp-route-search="@search">
                        <i class="bi bi-chevron-double-right"></i>
                    </a>
                </li>

            </ul>
        </nav>
    }


</div>
