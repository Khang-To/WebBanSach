@model WebBanSach.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}

<div class="d-flex justify-content-center align-items-center flex-grow-1">
    <div class="col-md-5 col-sm-10">
        <div class="p-4 shadow rounded bg-white">

            <h3 class="text-center text-success mb-4">ĐĂNG KÝ TÀI KHOẢN</h3>

            <form asp-action="Register" method="post">

                <!-- Hiển thị lỗi tổng -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        Vui lòng kiểm tra lại thông tin!
                    </div>
                }

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">Tài khoản</label>
                    <input asp-for="UserName" class="form-control" placeholder="Nhập tên tài khoản..." />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- FullName -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email..." />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm -->
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold">Nhập lại mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu..." />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Button -->
                <button type="submit" class="btn btn-success w-100 py-2">
                    <i class="bi bi-person-plus"></i> Đăng ký
                </button>
            </form>

            <div class="mt-3 text-center">
                Đã có tài khoản?
                <a asp-controller="Account" asp-action="Login">Đăng nhập</a>
            </div>

        </div>
    </div>
</div>

