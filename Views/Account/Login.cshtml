@model WebBanSach.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center align-items-center flex-grow-1">
    <div class="col-md-4 col-sm-10">
        <div class="p-4 shadow rounded bg-white">

            <h3 class="text-center text-success mb-4">ĐĂNG NHẬP</h3>

            <form asp-action="Login" method="post">

                <!-- Hiển thị lỗi tổng -->
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
                {
                    <div class="alert alert-danger">
                        Sai tài khoản hoặc mật khẩu!
                    </div>
                }

                @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Any(e => e.ErrorMessage.Contains("khóa")))
                {
                    <div class="alert alert-danger">
                        <strong>Lưu ý:</strong> @ViewData.ModelState[""].Errors.First(e => e.ErrorMessage.Contains("khóa")).ErrorMessage
                    </div>
                }

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">Tài khoản</label>
                    <input asp-for="UserName" class="form-control" placeholder="Nhập tên tài khoản..." />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu..." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-success w-100 py-2">
                    <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                </button>

            </form>

            <div class="mt-3 text-center">
                Chưa có tài khoản?
                <a asp-controller="Account" asp-action="Register">Đăng ký ngay</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
