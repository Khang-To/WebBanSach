@model WebBanSach.Models.Product

<a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ID">
    <div class="card product-card border-0 shadow-sm">

        @if (Model.DiscountPercent > 0)
        {
            <span class="badge bg-danger position-absolute top-0 end-0 m-2 shadow-sm" style="z-index: 2;">
                -@Model.DiscountPercent%
            </span>
        }

        <div class="text-center overflow-hidden bg-white rounded-top">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ID"><img src="~/images/products/@Model.ImageUrl" class="card-img-top" alt="@Model.Name" /></a>
        </div>

        <div class="card-body d-flex flex-column text-center px-2">
            <h6 class="card-title text-truncate-2 mb-2 fw-bold text-dark" style="font-size: 15px; min-height: 40px;">
                <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.ID" class="text-decoration-none text-dark stretched-link">@Model.Name</a>
            </h6>
            <div class="mt-auto">
                <div class="text-danger fw-bold fs-5">@Model.FinalPrice.ToString("n0") đ</div>
                @if (Model.DiscountPercent > 0)
                {
                    <div class="text-muted text-decoration-line-through small">@Model.Price.ToString("n0") đ</div>
                }
            </div>
        </div>
    </div>
</a>
