@{
    ViewData["Title"] = "TKBook - Nhà sách trực tuyến uy tín";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        :root {
            --primary-green: #00a651;
            --primary-blue: #003087;
        }

        .logo {
            font-size: 28px;
            font-weight: 900;
            color: var(--primary-green);
            text-decoration: none;
        }

        .badge-sale {
            position: absolute;
            top: -15px;
            left: -30px;
            background: #ffeb3b;
            color: #333;
            padding: 12px 20px;
            border-radius: 50%;
            font-weight: bold;
            font-size: 14px;
            transform: rotate(-15deg);
            z-index: 10;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        .footer{
            background-color: var(--primary-green);
            color: #fff;
        }
    </style>
</head>

<body id="top">
    <!-- ==================== HEADER ==================== -->
    <header class="border-bottom">

        <!-- Main header -->
        <div class="container py-3">
            <div class="row align-items-center g-4">
                <!-- Logo -->
                <div class="col-lg-3 col-12 text-center text-lg-start">
                    <a href="/" class="logo"><i class="bi bi-book"></i> TKBook</a>
                </div>

                <!-- Search -->
                <div class="col-lg-6 col-12">
                    <form asp-controller="Products" asp-action="Index" method="get" class="d-flex">
                        <input class="form-control me-2" type="search" name="search" placeholder="Tìm kiếm sách, tác giả..." value="@ViewBag.Search" />
                        <button class="btn btn-success" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>

                <!-- Actions -->
                <div class="col-lg-3 col-12 text-center text-lg-end">
                    <div class="d-flex">
                        <a href="#" class="btn btn-outline-success"><i class="bi bi-person"></i> Đăng nhập</a>&nbsp;
                        <a href="#" class="btn btn-outline-success"><i class="bi bi-cart3"></i> Giỏ hàng <span class="badge bg-danger text-white ms-1 rounded-pill">0</span></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg shadow-sm" style="background-color: #f8f9fa;">
            <div class="container d-flex justify-content-between align-items-center">

                <!-- Dropdown Danh mục -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle fw-semibold" href="#" data-bs-toggle="dropdown">
                                Danh mục sách
                            </a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Products" asp-action="Index" class="list-group-item ps-3"> Tất cả sách </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>@await Component.InvokeAsync("CategoryMenu")</li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fw-semibold" asp-controller="Home" asp-action="Privacy">Giới thiệu</a>
                        </li>

                    </ul>
                </div>

                <!-- Các thông tin bên phải -->
                <div class="d-flex gap-4 align-items-center flex-wrap">

                    <span class="text-dark">
                        <i class="bi bi-truck text-success"></i> Ship COD Toàn Quốc
                    </span>

                    <span class="text-dark">
                        <i class="bi bi-gift text-success"></i> Free Ship đơn từ 300k
                    </span>

                    <span class="text-dark">
                        <i class="bi bi-telephone-fill text-success"></i> 0123456789
                    </span>

                </div>
            </div>
        </nav>

    </header>

    <div class="container px-4 px-lg-5">
        @RenderBody()
    </div>

    <!-- Footer-->
    <footer class="py-5 footer">
        <div class="text-center mb-5"><a class="text-warning" href="#top"><i class="bi bi-chevron-up" style="font-size: 3rem; font-weight: bold; color:white;"></i></a></div>

        <div class="container">
            <div class="row">
                <div class="col-6 text-light">
                    <h4>ABC Shop - Cửa hàng văn phòng phẩm</h4>
                    <p>Địa chỉ: 18 Ung Văn Khiêm, phường Đông Xuyên, TP Long Xuyên, An Giang</p>
                    <p>Điện thoại: 076 3841190 - Email: abc@abc.com</p>
                </div>
                <div class="col-3 text-white">
                    <h4>DANH MỤC HÀNG</h4>
                    @await Component.InvokeAsync("CategoryMenu")
                </div>
                <div class="col-3 text-white">
                    <h4>DỊCH VỤ KHÁCH HÀNG</h4>
                    <a href="#" class="list-group-item">Hướng dẫn mua hàng</a>
                    <a href="#" class="list-group-item">Câu hỏi thường gặp</a>
                    <a href="#" class="list-group-item">Liên hệ với chúng tôi</a>
                </div>
            </div>
            <hr>
            <p class="m-0 text-center text-warning fw-bolder">Copyright &copy; TKBook</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
