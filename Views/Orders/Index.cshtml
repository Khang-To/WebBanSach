@model List<WebBanSach.Models.Order>

@{
    ViewData["Title"] = ViewBag.Title ?? "Đơn hàng của tôi";
    var showPayOnly = ViewBag.ShowPayButtonOnly == true;
}

<div class="container mt-4">
    <h3 class="mb-4 text-success">
        <i class="bi bi-journal-text"></i> @ViewData["Title"]
    </h3>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center">
            @ViewBag.Message
        </div>
    }

    @foreach (var order in Model.OrderByDescending(o => o.OrderDate))
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center bg-success-subtle text-success">
                <div>
                    <strong>Đơn hàng #@order.ID</strong><br />
                    <small>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</small>
                </div>
                <div>
                    @switch (order.Status)
                    {
                        case OrderStatus.Pending:
                            <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Chờ xác nhận</span>
                            break;
                        case OrderStatus.Confirmed:
                            <span class="badge bg-primary"><i class="bi bi-check-circle"></i> Đã xác nhận</span>
                            break;
                        case OrderStatus.Cancelled:
                            <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Đã hủy đơn</span>
                            break;
                        case OrderStatus.Paid:
                            <span class="badge bg-success"><i class="bi bi-cash-stack"></i> Đã thanh toán</span>
                            break;
                    }
                </div>
            </div>
            <div class="card-body bg-white p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tên sách</th>
                            <th>Thể loại</th>
                            <th>Nhà xuất bản</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal tongtien = 0;
                        }
                        @foreach (var item in order.OrderDetails)
                        {
                            var thanhtien = item.UnitPrice * item.Quantity;
                            tongtien += thanhtien;

                            <tr>
                                <td>@item.Product?.Name</td>
                                <td>@item.Product?.Category?.Name</td>
                                <td>@item.Product?.Publisher?.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("n0") ₫</td>
                                <td>@thanhtien.ToString("n0") ₫</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="fw-bold">
                            <td colspan="5" class="text-end text-danger">Tổng cộng:</td>
                            <td class="text-danger">@tongtien.ToString("n0") đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer text-end">
                @* Ẩn nút Hủy nếu đang ở chế độ thanh toán *@
                @if (!showPayOnly && order.Status == OrderStatus.Pending)
                {
                    <form asp-action="CancelOrder" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@order.ID" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn hủy đơn hàng?')">Hủy đơn hàng</button>
                    </form>
                }

                @* Chỉ hiện nút Thanh toán khi đúng trạng thái và đúng chế độ *@
                @if (order.Status == OrderStatus.Confirmed)
                {
                    <form asp-action="PayOrder" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@order.ID" />
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-cash-stack"></i> Thanh toán ngay
                        </button>
                    </form>
                }
            </div>
        </div>
    }

    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Phân trang đơn hàng" class="mt-4">
            <ul class="pagination justify-content-center">
                <!-- Nút Previous -->
                <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-mode="@ViewBag.Mode"
                       asp-route-page="@(ViewBag.CurrentPage - 1)"
                       tabindex="-1">« Trước</a>
                </li>

                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-mode="@ViewBag.Mode"
                           asp-route-page="@i">@i</a>
                    </li>
                }

                <!-- Nút Next -->
                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-mode="@ViewBag.Mode"
                       asp-route-page="@(ViewBag.CurrentPage + 1)">Sau »</a>
                </li>
            </ul>
        </nav>
    }
</div>
